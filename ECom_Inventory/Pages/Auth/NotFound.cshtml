@page
@model ECom_Inventory.Pages.Auth.NotFoundModel
@{
    ViewData["Title"] = "404 Not Found";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #f8f9fa;
        }

        .vh-100 {
            height: 100vh;
        }
    </style>
</head>
<body>

    <div class="d-flex align-items-center justify-content-center vh-100">
        <div class="container text-center">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card shadow-lg">
                        <div class="card-header bg-danger text-white">
                            <h5 class="mb-0">404 Not Found</h5>
                        </div>
                        <div class="card-body">
                            <p class="lead">Oops! The page you are looking for does not exist.</p>
                            <a href="/" class="btn btn-primary">Go to Home</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="footer text-center mt-3">
        <p class="text-muted">Admin Panel &copy; 2024</p>
    </footer>

</body>
</html>
